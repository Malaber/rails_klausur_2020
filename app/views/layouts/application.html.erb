<!DOCTYPE html>
<html>
  <head>
    <title>Klausur</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar container is-dark">
    <h1 class="navbar-brand">Klausur 2020</h1>
    <div class="navbar-menu">
      <div class="navbar-start">
        <a class="navbar-item <%= 'is-active' if params[:controller] == 'patients' %>" href="xx">Patienten</a>
        <a class="navbar-item <%= 'is-active' if params[:controller] == 'doctors' %>" href="xx">Doktoren</a>
        <a class="navbar-item <%= 'is-active' if params[:controller] == 'laboratories' %>" href="xx">Labore</a>

      </div>
    </div>
  </nav>
  <main class="container">

      <%= yield %>
    </main>
  </body>
</html>
